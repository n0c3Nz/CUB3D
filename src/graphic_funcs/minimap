#include "CUB3D.h"

int	draw_minimap(t_cub *cub)
{
	int x = 0;
	int y = 0;

	printf("cub height: %d\n", cub->map_height);
	printf("cub width: %d\n", cub->map_size);
	printf("cub height pixels: %d\n", (height / 5));
	printf("cub width pixels: %d\n", (width / 5));
	while (y < cub->map_height)
	{
		x = 0;
		while (x < cub->map_size)
		{
			if (cub->map[y][x] == 0)
				mlx_pixel_put(cub->mlx, cub->mlx_win, x, y, 0xFFFFFF);
			else
				mlx_pixel_put(cub->mlx, cub->mlx_win, x, y, 0xFFFF00);
			x++;
		}
		y++;
	}
	return (0);
}

